<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/standartBottomSheet"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SheetFragment"
        android:background="@drawable/background_round"
        android:elevation="6dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save_record"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textSize="20sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/filenameInput"
            android:layout_width="300dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:paddingLeft="5dp"
            android:background="@drawable/bottom_sheet_editittext_style"
            android:text="" />

        <ImageButton
            android:id="@+id/btnClear"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/baseline_clear_24" />

    </LinearLayout>





        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/style_btn_file"
                android:text="@string/cancel"
                android:textSize="16sp"
                android:textColor="@color/black"
                app:cornerRadius="26dp"
                app:rippleColor="@color/grayDark">

            </Button>

            <Button
                android:id="@+id/btnOkay"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/style_btn_file"
                android:text="@string/ok"
                android:textSize="23sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:cornerRadius="26dp"
                app:rippleColor="@color/grayDark">

            </Button>
        </LinearLayout>

    </LinearLayout>
